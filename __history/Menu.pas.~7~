unit Menu;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.Imaging.pngimage;

type
  TMenuForm = class(TForm)
    Image1: TImage;
    singleplayerButton: TImage;
    highScoreButton: TImage;
    multiplayerButton: TImage;
    exitButton: TImage;
    procedure singleplayerButtonMouseEnter(Sender: TObject);
    procedure exitButtonClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  MenuForm: TMenuForm;
  Stream: TMemoryStream;
  singleplayerButton: TImage;
implementation

{$R *.dfm}

procedure TMenuForm.exitButtonClick(Sender: TObject);
begin
  Close;
end;

procedure TMenuForm.singleplayerButtonMouseEnter(Sender: TObject);
begin
  Stream := TMemoryStream.Create;
  try
    Stream.LoadFromFile('D:\Programování\Maturitní práce\Tetris\obrazky\SinglePlayerClickButton.png');
    Stream.Position := 0;
    singleplayerButton.Picture.Graphic.LoadFromStream(Stream);
  finally
    Stream.Free;
  end;
end;

end.
